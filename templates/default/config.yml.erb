---
driver:
  name: digitalocean

driver_config:
  digitalocean_access_token: <%= ENV['DIGITALOCEAN_ACCESS_TOKEN'] %>
  ssh_key_ids: <%= ENV['DIGITAL_OCEAN_SSH_KEY_IDS'] %>
  ssh_key: <%= ENV['DIGITAL_OCEAN_SSH_KEY_PATH'] %>

platforms:
  - name: ubuntu-14-10-x64
    driver_config:
      size: 2gb
  - name: centos-7-0-x64
    driver_config:
      size: 2gb
      